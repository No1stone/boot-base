<?xml version="1.0" encoding="UTF-8"?>
<included>

    <property name="LOG_DIR" value="applog" />

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/application.log.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{"yyyy-MM-dd HH:mm:ss", UTC} %-5p [${APPLICATION_NAME},%X{traceId:-},%X{spanId:-}] %c{1}:%L - %X{dd.trace_id} %X{dd.span_id} - %m%n</pattern>
        </encoder>
    </appender>


